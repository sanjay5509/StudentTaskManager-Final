@model IEnumerable<StudentTaskManager.Models.Category>

@{
    ViewData["Title"] = "Task Categories";
}

<div class="header-area">
    <h2 style="margin:0; font-weight:700;">Task Categories</h2>
    <a asp-action="Create" class="btn-primary-custom">+ Add New Category</a>
</div>

<div class="card-box" style="padding: 0;">
    <table class="custom-table" style="width:100%;">
        <thead>
            <tr>
                <th style="width: 70%;">Category Name</th>
                <th style="width: 20%;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <strong style="font-size: 16px;">
                            @Html.DisplayFor(modelItem => item.Name)
                        </strong>
                    </td>

                    <td style="display: flex; gap: 8px; justify-content: center;">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="action-icon icon-edit" title="Edit Category">
                            <i class="fa-solid fa-pencil"></i>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id" class="action-icon icon-delete" title="Delete Category">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (!Model.Any())
    {
        <p style="text-align: center; padding: 20px; color: var(--text-grey);">No categories found. Please add one.</p>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}