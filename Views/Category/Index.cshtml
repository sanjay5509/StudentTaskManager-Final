@model StudentTaskManager.Models.PaginatedTaskListViewModel

@{
    ViewData["Title"] = "Task Categories";
}

<div class="header-area">
    <h2 style="margin:0; font-weight:700;">Task Categories</h2>
    <a asp-action="Create" class="btn-primary-custom">+ Add New Category</a>
</div>

<div class="card-box" style="padding: 0;">
    <table class="custom-table" style="width:100%;">
        <thead>
            <tr>
                <th style="width: 70%;">Category Name</th>
                <th style="width: 20%;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>
                        <strong style="font-size: 16px;">
                            @Html.DisplayFor(modelItem => item.Name)
                        </strong>
                    </td>

                    <td style="display: flex; gap: 8px; justify-content: center;">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="action-icon icon-edit" title="Edit Category">
                            <i class="fa-solid fa-pencil"></i>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id" class="action-icon icon-delete" title="Delete Category">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
   
    <nav aria-label="Page navigation" style="margin-top: 16px;">
        <ul class="pagination justify-content-center">

            
            <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
            </li>

            
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }

          
            <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)">Next</a>
            </li>
        </ul>
    </nav>

    @if (Model.TotalTasks > 0)
    {
        <div class="text-center mt-3">
            
        </div>
    }
    @if (!Model.Categories.Any())
    {
        <p style="text-align: center; padding: 20px; color: #7a6eff;"> Please add one more.</p>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}