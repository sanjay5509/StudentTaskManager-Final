@model StudentTaskManager.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="card-box" style="max-width: 600px; margin: auto; text-align:center;">
    <h3 class="text-danger">Are you sure you want to delete this category?</h3>
    <hr />

    <dl class="row" style="text-align:left;">
        <dt class="col-sm-4">Category Name:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn-primary-custom" style="background-color: red;">Delete</button> |
        <a asp-action="Index" style="color:var(--text-grey);">Cancel</a>
    </form>
</div>