@page
@model AccessDeniedModel

@{
    ViewData["Title"] = "Access Denied";
    Layout = "/Views/Shared/_Layout.cshtml"; 
}

<header>
    <h1 class="text-danger">@ViewData["Title"]</h1>
</header>

<div class="identity-page-wrapper">
    <div class="identity-form-card" style="max-width: 600px; text-align: center;">
        <h2 class="text-danger" style="color: #ef4444 !important;">
            <i class="fa-solid fa-lock" style="margin-right: 10px;"></i>
            ACCESS DENIED
        </h2>
        <p class="text-secondary" style="font-size: 1.1rem; margin-top: 20px; color: var(--text-grey);">
            You do not have permission to view the **@ViewData["Title"]** page (Category/Admin Section).
        </p>

        <p style="margin-top: 30px;">
            <a href="/" class="btn-primary-custom" style="background-color: #7a6efe; padding: 10px 20px; text-decoration: none;">
                Go to Dashboard
            </a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}